# 将此文件作为根 EditorConfig，阻止向上层目录的配置合并
root = true

# 通用规则，适用于所有文件
[*]
# 文件编码：UTF-8（确保所有文件统一编码）
charset = utf-8
# 行尾换行符：CRLF（Windows 风格换行）
end_of_line = crlf
# 缩进风格：使用空格而非制表符
indent_style = space
# 每一级缩进宽度：4 个空格
indent_size = 4
# Tab 显示宽度：视为 4 个空格（用于编辑器显示）
tab_width = 4
# 文件结尾自动插入换行（有助于统一差异比较）
insert_final_newline = true
# 自动移除行尾多余空白字符
trim_trailing_whitespace = true

# XML 文件专用设置
[*.xml]
# XML 缩进宽度为 2 个空格
indent_size = 2

# C# 工程文件（MSBuild XML）专用设置
[*.csproj]
# csproj 缩进宽度为 2 个空格
indent_size = 2

# JSON/YAML 文件专用设置
[*.{json,yml,yaml}]
# JSON/YAML 缩进宽度为 2 个空格
indent_size = 2

# C# 源代码文件专用设置
[*.cs]
# 代码文件编码：UTF-8（显式覆盖，确保代码文件统一）
charset = utf-8
# C# 代码缩进宽度为 4 个空格
indent_size = 4
# using 排序：System 命名空间置于最前
dotnet_sort_system_directives_first = true
# using 指令分组：按空行分组整理导入
dotnet_separate_import_directive_groups = true
# 对象初始化器：鼓励使用对象初始化器语法
dotnet_style_object_initializer = true:suggestion
# 集合初始化器：鼓励使用集合初始化器语法
dotnet_style_collection_initializer = true:suggestion
# 自动属性：优先使用自动属性而非显式字段封装
dotnet_style_prefer_auto_properties = true:suggestion
# 空合并表达式：鼓励使用 ?? 简化空判断
dotnet_style_coalesce_expression = true:suggestion
# 空传播运算符：鼓励使用 ?. 简化空引用访问
dotnet_style_null_propagation = true:suggestion
# 简化布尔表达式：去除冗余比较/逻辑
dotnet_style_prefer_simplified_boolean_expressions = true:suggestion
# 复合赋值：鼓励使用 +=、-= 等复合形式
dotnet_style_prefer_compound_assignment = true:suggestion
# 推断元组成员名：鼓励省略重复成员名
dotnet_style_prefer_inferred_tuple_names = true:suggestion
# 推断匿名类型成员名：鼓励省略重复成员名
dotnet_style_prefer_inferred_anonymous_type_member_names = true:suggestion
# 访问修饰符：始终要求显式声明（如 public/private）
dotnet_style_require_accessibility_modifiers = always:suggestion

# 内置类型使用 var：不使用（如 int 而非 var）
csharp_style_var_for_built_in_types = false:suggestion
# 类型明显时使用 var：鼓励（如 new() 的目标类型已知）
csharp_style_var_when_type_is_apparent = true:suggestion
# 其他情况使用 var：不鼓励（提高可读性）
csharp_style_var_elsewhere = false:suggestion
# 代码块始终使用花括号：鼓励（减少错缩进风险）
csharp_prefer_braces = true:suggestion
# 优先使用模式匹配：鼓励
csharp_style_prefer_pattern_matching = true:suggestion
# 方法使用表达式体：在可能时使用
csharp_style_expression_bodied_methods = when_possible:suggestion
# 属性使用表达式体：在可能时使用
csharp_style_expression_bodied_properties = when_possible:suggestion
# 构造函数表达式体：不鼓励（保持结构清晰）
csharp_style_expression_bodied_constructors = false:suggestion
# 访问器表达式体：在可能时使用
csharp_style_expression_bodied_accessors = when_possible:suggestion
# 优先使用 switch 表达式：鼓励
csharp_style_prefer_switch_expression = true:suggestion
# 优先使用索引运算符：鼓励（Span/Index 等）
csharp_style_prefer_index_operator = true:suggestion
# 优先使用范围运算符：鼓励（Slice 等）
csharp_style_prefer_range_operator = true:suggestion

# 在所有语法结构的开括号前换行
csharp_new_line_before_open_brace = all
# LINQ 查询子句之间换行
csharp_new_line_between_query_expression_clauses = true
# switch/case 内内容缩进
csharp_indent_case_contents = true
# switch 标签缩进
csharp_indent_switch_labels = true
# 标签（如 goto）顶格，不随代码缩进
csharp_indent_labels = flush_left
# 控制流关键字后保留空格（如 if、for）
csharp_space_after_keywords_in_control_flow_statements = true
# 方法调用参数列表括号内不加空格
csharp_space_between_method_call_parameter_list_parentheses = false
# 方法声明参数列表括号内不加空格
csharp_space_between_method_declaration_parameter_list_parentheses = false
# 二元运算符两侧保留空格（提高可读性）
csharp_space_around_binary_operators = before_and_after

# 规则：私有字段命名规则应用到符号集 private_fields
dotnet_naming_rule.private_fields_underscore.required_symbol = private_fields
# 规则：使用“下划线前缀+驼峰”的命名样式
dotnet_naming_rule.private_fields_underscore.style = underscore_prefix_camel_case
# 规则严重性：提示（可调整为 warning/error）
dotnet_naming_rule.private_fields_underscore.severity = suggestion

# 符号集 private_fields：适用种类为字段
dotnet_naming_symbols.private_fields.applicable_kinds = field
# 符号集 private_fields：适用可见性为 private
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
# 符号集 private_fields：无特定修饰符要求
dotnet_naming_symbols.private_fields.required_modifiers =

# 命名样式：要求前缀为下划线
dotnet_naming_style.underscore_prefix_camel_case.required_prefix = _
# 命名样式：下划线后为驼峰形式（camelCase）
dotnet_naming_style.underscore_prefix_camel_case.capitalization = camel_case

# 规则：接口命名规则应用到符号集 interfaces
dotnet_naming_rule.interfaces_start_with_I.required_symbol = interfaces
# 规则：接口使用 “I+帕斯卡” 命名样式
dotnet_naming_rule.interfaces_start_with_I.style = prefix_I_pascal_case
# 规则严重性：提示（可调整为 warning/error）
dotnet_naming_rule.interfaces_start_with_I.severity = suggestion

# 符号集 interfaces：适用种类为 interface
dotnet_naming_symbols.interfaces.applicable_kinds = interface
# 符号集 interfaces：适用所有可见性
dotnet_naming_symbols.interfaces.applicable_accessibilities = *
# 符号集 interfaces：无特定修饰符要求
dotnet_naming_symbols.interfaces.required_modifiers =

# 命名样式：要求前缀为 I
dotnet_naming_style.prefix_I_pascal_case.required_prefix = I
# 命名样式：接口名称使用帕斯卡命名（PascalCase）
dotnet_naming_style.prefix_I_pascal_case.capitalization = pascal_case

# 规则：类型命名规则应用到符号集 types
dotnet_naming_rule.types_pascal_case.required_symbol = types
# 规则：类型使用帕斯卡命名样式
dotnet_naming_rule.types_pascal_case.style = pascal_case_style
# 规则严重性：提示（可调整为 warning/error）
dotnet_naming_rule.types_pascal_case.severity = suggestion

# 符号集 types：适用种类为类/结构/枚举/委托
dotnet_naming_symbols.types.applicable_kinds = class, struct, enum, delegate
# 符号集 types：适用所有可见性
dotnet_naming_symbols.types.applicable_accessibilities = *
# 符号集 types：无特定修饰符要求
dotnet_naming_symbols.types.required_modifiers =

# 命名样式：类型名称使用帕斯卡命名（PascalCase）
dotnet_naming_style.pascal_case_style.capitalization = pascal_case
